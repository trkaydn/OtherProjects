@model Admin
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>Personel Listesi - Admin Girişi</title>
    <link href="~/Content/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="signin.css" rel="stylesheet">
</head>

<body class="text-center">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4 mt-4">
            <div class="jumbotron">
                <form class="form-signin" method="post">
                    <img class="mb-4" src="~/Content/images/nullperson.png" alt="person">
                    <h1 class="h3 mb-3 font-weight-normal">Personel Listesi</h1>
                    <h1 class="h3 mb-3 font-weight-normal">Admin Girişi</h1>
                    @if (TempData["message"] != null)
                    {
                        <div class="p-3 mb-2 bg-info text-dark"><p>@TempData["message"]</p></div>

                    }

                    @Html.TextBoxFor(x => x.MailAddress, new { @class = "form-control mt-3 mb-3", placeholder = "E-Posta" })
                    @Html.ValidationMessageFor(x => x.MailAddress, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control mt-3 mb-3", placeholder = "Şifre", type="password" })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })

                    <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Giriş Yap</button>
                    @if (ViewBag.Message != null)
                    {
                        <p class="text-danger mt-3"><strong>@ViewBag.Message</strong></p>
                    }

                    <p class="mt-5 mb-3 text-muted">
                        Henüz bir hesabın yok mu?
                        <a href="@Url.Action("Index","Register")">Hemen Kayıt Ol!</a>
                    </p>
                    <p class="mt-5 mb-3 text-muted">
                        &copy; @DateTime.Now.Year Tüm hakları saklıdır,
                        <a href="https://tr.linkedin.com/in/trkaydn">Tarık Aydın</a>
                    </p>
                </form>
            </div>
        </div>
        <div class="col-sm-4"></div>
    </div>
</body>
</html>
