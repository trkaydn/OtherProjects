@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/lib/jquery/jquery-3.5.1.min.js"></script>
    <script src="~/Content/lib/scripts/bootstrap.min.js"></script>
    <script src="~/Content/lib/scripts/bootstrap.bundle.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <style>
        footer {
            position: fixed;
            left: 0;
            right: 0;
            bottom: 0;
        }
    </style>
    <title>Personel Listesi</title>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">Personel Listesi</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Index","Home")" class="nav-link active">Anasayfa</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("About","Home")" class="nav-link">Hakkımızda</a>
                </li>
            </ul>
            <div class="navbar-collapse w-100 order-3 dual-collapse2">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="@Url.Action("Index","Admin")" class="btn btn-secondary">Admin Paneli</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid mb-5">
        @RenderBody()
    </div>

    <br /><br />
    <footer class="bg-dark text-center text-light">
        <div class="text-center p-3">
            &copy; @DateTime.Now.Year Tüm hakları saklıdır,
            <a href="https://tr.linkedin.com/in/trkaydn">Tarık Aydın</a>
        </div>
    </footer>

</body>
</html>
